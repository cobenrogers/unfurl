{
    "name": "bennernet/unfurl",
    "description": "Google News URL decoder and RSS feed generator",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "BennernetLLC"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/log": "^2.0 || ^3.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-dom": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Unfurl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Unfurl\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": "phpunit --testsuite Integration",
        "test:performance": "phpunit --testsuite Performance",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}
